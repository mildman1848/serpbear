# Serpbear Configuration

# User and Group IDs (use: id -u && id -g)
PUID=1000
PGID=1000

# Timezone
TZ=Europe/Berlin

# Network Configuration
EXTERNAL_PORT=3000
APPLICATION_PORT=3000
HOST_BIND=127.0.0.1

# Security
UMASK=027
NO_AUTH=false

# Paths
CONFIG_PATH=./config
DATA_PATH=./data
LOGS_PATH=./logs

# Serpbear Configuration
SERPBEAR_VERSION=2.0.7
SERPBEAR_MODE=server

# Database
DATABASE_URL=file:./data/database/serpbear.db

# SERP Scraping (optional)
# SCRAPING_ROBOT_API_KEY=
# SERPAPI_KEY=
# PROXY_SERVER=

# Email Notifications (optional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# Authentication
# NEXTAUTH_SECRET=
# NEXTAUTH_URL=http://localhost:3000

# Security (FILE__ prefix for secrets)
FILE__NEXTAUTH_SECRET=/run/secrets/serpbear_nextauth_secret.txt
FILE__DATABASE_KEY=/run/secrets/serpbear_database_key.txt
FILE__API_KEY=/run/secrets/serpbear_api_key.txt
